<h1>Ordr list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Username</th>
            <th>Amount</th>
            <th>Extra</th>
            <th>Public</th>
            <th>Created_at</th>
            <th>Session</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('admin_ordr_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.username }}</td>
            <td>{{ entity.amount }}</td>
            <td>{{ entity.extra }}</td>
            <td>{{ entity.public }}</td>
            <td>{% if entity.createdat %}{{ entity.createdat|date('Y-m-d H:i:s') }}{% endif%}</td>
            <td>{{ entity.session }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_ordr_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_ordr_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('admin_ordr_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
